@model Capstone.Models.Carrello

@{
    ViewBag.Title = "Checkout";
}

@Html.Partial("_Notification")

<div class="container mt-5 py-5">
    <h2 class="text-white">Carrello</h2>
    @if (Model.Items != null && Model.Items.Any())
    {
        <table class="table text-white">
            <thead>
                <tr>
                    <th></th>
                    <th>Nome NFT</th>
                    <th>Descrizione</th>
                    <th>Prezzo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr class="vertical-center">
                        <td>
                            @if (item.NFTItem.TipoFile == "Audio")
                            {

                                <img src="@Url.Content($"~/Content/Images/astronauta-music.jpeg")" alt="Fixed Image" style="max-height: 100px; max-width: 100px;">
                            }
                            else
                            {
                                <img src="@Url.Content($"~/Content/Images/NFT/{item.NFTItem.NomeFile}")" alt="Immagine NFT" style="max-height: 100px; max-width: 100px;" />
                            }
                        </td>
                        <td>@item.NFTItem.NomeNFT</td>
                        <td>@item.NFTItem.Descrizione</td>
                        <td>@item.NFTItem.Prezzo</td>
                        <td>
                            <a href="@Url.Action("RimuoviDalCarrello", "Carrello", new { idNFT = item.NFTItem.IdNFT })" class="btn btn-sm btn-danger bg-transparent">Rimuovi</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary me-3">Continua gli acquisti</a>
            @Html.ActionLink("Completa l'acquisto", "Checkout", "Carrello", null, new { @class = "btn btn-custom" })   
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-6 text-white text-center">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <img src="~/Content/Images/shopping-cart.png" alt="Carrello" class="img-fluid" />
                    </div>
                    <div class="col-md-6">
                        <h3 class="mt-3">Il carrello è vuoto.</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 text-center">
                <a href="@Url.Action("Index", "Collezioni")" class="btn btn-custom">Esplora le collezioni</a>
            </div>
        </div>


    }
</div>
