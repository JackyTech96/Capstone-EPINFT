@model Capstone.Models.Carrello

@{
    ViewBag.Title = "Checkout";
}

@Html.Partial("_Notification")

<div class="container mt-5 py-5">
    <h2 class="text-white">Checkout</h2>
    <table class="table text-white">
        <thead>
            <tr>
                <th></th>
                <th>Nome NFT</th>
                <th>Descrizione</th>
                <th>Prezzo</th>
                <th>Quantità</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><img src="@Url.Content($"~/Content/Images/NFT/{item.NFTItem.NomeFile}")" alt="Immagine NFT" style="max-height: 100px; max-width: 100px;" /></td>
                    <td>@item.NFTItem.NomeNFT</td>
                    <td>@item.NFTItem.Descrizione</td>
                    <td>@item.NFTItem.Prezzo</td>
                    <td>@item.Quantita</td>
                    <td>
                        <a href="@Url.Action("RimuoviDalCarrello", "Carrello", new { idNFT = item.NFTItem.IdNFT })">Rimuovi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continua gli acquisti</a>
        @Html.ActionLink("Completa l'acquisto", "Checkout", "Carrello", null, new { @class = "btn btn-success" })
    </div>
</div>
